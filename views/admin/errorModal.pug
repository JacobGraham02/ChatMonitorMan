mixin errorModal
    div.modal.fade#successModal(tabindex="-1", role="dialog", aria-labelledby="successModalLabel", aria-hidden="true")
        div.modal-dialog.modal(role="document")
            div.modal-content
                div.modal-header
                    h5.modal-title#successModalLabel Error
                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") &times;
                div.modal-body
                    p There was an error when submitting this form. Please inform the server administrator of this error
                div.modal-footer
                    button.btn.btn-secondary(type="button", data-dismiss="modal") Close
