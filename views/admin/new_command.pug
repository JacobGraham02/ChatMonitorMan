extends layout

block variables
	- var page_title = title

include menu

block header
	header#header.header
		+menu(data)

block content
	main#command_new_page
		div#create_command_page_heading_container
			h1#create_command_page_header_h1 Create a new command and register it with the bot
		form#create_commands_file_form(method='POST', action='/admin/commands/new', enctype='application/x-www-form-urlencoded') 
			section#new_command_section
				fieldset#commands_file_javascript_code
					label#javascript_command_code(for='javascript_command_code') Write the command code below:
					textarea#commands_file_javascript_textarea(name='javascript_command_code', rows='30', cols='70')= code

				article#edit_command_form_field_buttons
					fieldset#save_command_changes
						button#create_new_command_button(type='submit') Create new command

					fieldset#cancel_command_changes
						button#cancel_changes_to_command_button(type='button') Cancel changes
			
	script(src='/javascripts/commands_form.js')


