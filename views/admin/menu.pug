mixin menu(user)
 section#menu_container
  div#website_menu_username_container
   input#menu-btn.menu-btn(type='checkbox')
   label.menu-icon(for='menu-btn')
    span.navicon
   ul.menu
    li
      div#navbar_welcome_message
       -if (user.admin_username !== undefined) {
         a#index_page_home_button(href='/admin/commands' title='A link to go to the website home page')
          img#menu_links_image(src='../../images/WilsonBotMenu.png', alt='The WilsonBot logo')
         h1#user_administrator_name_heading Welcome, #{user.admin_username}
    li
      a(href='/admin/commands' title='A link to go to the site commands page') Bot commands 
    li
      a(href='/admin/discordchannelids' title='A link to go to the Discord channel ids page that the bot will post content into') Discord channel ids
    li 
      a(href='/admin/ftpserverdata' title='A link to go to the FTP server data page that the bot will read from to access the FTP server log files') FTP server data
    -} else {
      h1#user_administrator_name_heading Welcome, anonymous!
    -}
    li 
     div#logout_button_container
      form#global_site_navigation_logout_form(action='/logout' method='POST')
       button#gui_bot_web_interface_logout_button(type="submit") Log out
    li
     div#recompile_executable_button_container
      form#global_site_navigation_recompile_application_executable(action='/admin/recompile', method='POST')
       button#recompile_executable_button(type="submit") Recompile executable
