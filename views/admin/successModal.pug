mixin successModal
    div.modal.fade#successModal(tabindex="-1", role="dialog", aria-labelledby="successModalLabel", aria-hidden="true")
        div.modal-dialog.modal(role="document")
            div.modal-content
                div.modal-header
                    h5.modal-title#successModalLabel Success
                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") &times;
                div.modal-body
                    p The form was submitted successfully!
                div.modal-footer
                    button.btn.btn-secondary(type="button", data-dismiss="modal") Close
